<head>
  <title>horoscope</title>
  <link href="../../app/assets/stylesheets/style.css" rel="stylesheet">
  <link href="../../app/assets/stylesheets/reset.css" rel="stylesheet">
</head>
<%= form_with(model: prediction) do |form| %>
  <% if prediction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(prediction.errors.count, "error") %> prohibited this prediction from being saved:</h2>

      <ul>
        <% prediction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>

<head>
  <title>horoscope</title>
  </head>
  <body>
  <%= form_with(model: prediction, class: "form-horizontal") do |form| %>
    <% if prediction.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(prediction.errors.count, "error") %> prohibited this prediction from being saved:</h2>

        <ul>
          <% prediction.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :date, class: "control-label 2" %>
      <div class="col-6">
        <%= form.date_field :date, value: Date.today, class: "form-control", autocomplete: "on" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :sign, class: "control-label " %>
      <div class="col-6">
        <%= form.select :sign, options_for_select(["Belier", "Taureau", "Gemeaux", "Cancer", "Lion", "Vierge", "Balance", "Scorpion", "Sagittaire", "Capricorne", "Verseau", "Poissons"]), class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :text_work, class: "control-label 2" %>
      <div class="col-6">
        <%= form.text_area :text_work, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :text_love, class: "control-label 2" %>
      <div class="col-6">
        <%= form.text_area :text_love, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :text_money, class: "control-label 2" %>
      <div class="col-6">
        <%= form.text_area :text_money, class: "form-control" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="col-3">
        <%= form.submit "enregistrer", class: "btn btn-primary form-control" %>
      </div>
    </div>
  <% end %>
  </body>
  
    <%= form.text_field :sign %>
  </div>

  <div>
    <%= form.label :text_work, style: "display: block" %>
    <%= form.text_area :text_work %>
  </div>

  <div>
    <%= form.label :text_love, style: "display: block" %>
    <%= form.text_area :text_love %>
  </div>

  <div>
    <%= form.label :text_money, style: "display: block" %>
    <%= form.text_area :text_money %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
